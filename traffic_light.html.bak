<!doctype html>
<html>
	<head>
	<meta charset="utf-8">
	<title>Traffic light</title>
	<style>
		.conteiner{
			width: 300px;
			height: 500px;
			background:black;
			margin:auto;
			padding-top:10px;
			padding-bottom:10px;
			borfer:4px solid gray;
			
		}
		.red-block,.yellow-block,.green-block{
			width:150px;
			height: 150px;
			margin:auto;
			border-radius:75px;
			margin-bottom: 10px;
			border: 2px solid silver;
			box-shadow:inset 0 0 10px 10px black;
		}
		.red-block:hover{
			background:red;
			}
		.yellow-block:hover{
			background:yellow;
			}
		.green-block:hover{
			background:green;
			}
	</style>
	</head>
	<body>
		<div class="conteiner">
			<div class="red-block"></div>
			<div class="yellow-block"></div>
			<div class="green-block"></div>
		</div>
	</body>
</html>